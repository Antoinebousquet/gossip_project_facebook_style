<% content_for :title, "Gossips index" %>


<div class='container-fluid'>
  <% if notice %>
  <hr/>
  <div class="alert alert-success" role="alert">
    <%= notice %>
  </div>
  <hr/>
  <% end %>

  <hr/>
  
  <div class='container-fluid'>
    <h1 class='text-center text-info'>Le potin : plus qu'un hobby, un style de vie...</h1>
  </div>
  <hr/>

  <hr/>
  <div class='container-fluid mb-5'>
    <h2 class='text-success text-center mt-2'>Psst... hey !</h2>
    <h4 class='text-center mb-4'>Got something tasty to share ?</h4>
    <p class='text-center'><%= link_to 'New Gossip', new_gossip_path, :class => 'btn btn-lg btn-success', data: { turbolinks: false } %></p>
    </div>
  </div>
  <hr/>

  <hr/>
  <div class='container-fluid'>
    <h2 class='text-primary text-center my-4'>Saved gossips</h2>
    <div class='container-fluid'>
      <div class ='row px-2 justify-content-around'>
        <% @gossips.each do |gossip| %>
        <div class="card col-10 col-md-5 col-lg-3 mx-1 my-3 border-primary">
          <div class="card-body">
            <h5 class="card-title text-center text-primary ">Gossip nÂ°<%= gossip.id.to_s + ' - ' + gossip.title %></h5>
            <h6 class="card-subtitle mb-2 text-muted text-right">by <%= gossip.user.first_name + ' ' + gossip.user.last_name %></h6>
            <p class="card-text text-justify"><%= gossip.content[0..210] + '...' %></p>
            <%= link_to 'More info', gossip_path(gossip), :class => 'btn btn-sm btn-outline-info' %>
            <%= link_to 'Edit gossip', edit_gossip_path(gossip), :class => 'btn btn-sm btn-outline-warning' %>
            <%= link_to 'Delete gossip', gossip, method: :delete, data: { confirm: 'Are you sure?' }, :class => 'btn btn-sm btn-outline-danger' %>
          </div>
        </div>
          <% end %>
      </div>
    </div>
  </div>
  <hr/>
</div>
