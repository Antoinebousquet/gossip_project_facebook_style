<!DOCTYPE html>
<html>
<head>
	<title>The Gossip Project - Login</title>
</head>
<body>
	<h1>Sign in</h1>

	<%= form_tag url_for(action: 'create'), method: "post" do %>

	  <%= label_tag '@mail' %>
	  <%= text_field_tag 'email', @user.email %>
	  <br /> <br />

	  <%= label_tag 'Password' %>
	  <%= text_field_tag 'password', @user.password %>
	  <br /> <br />

	  <%= submit_tag "Sign in" %>

	<% end %>

</body>
</html>